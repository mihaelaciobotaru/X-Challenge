<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>X-Challenge | Inregistrare</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    {% block stylesheets %}
        {% include 'AppBundle::stylesheet.html.twig' %}
    {% endblock %}
</head>
<body class="hold-transition register-page">
<div class="register-box">
    <div class="register-logo">
        <b>X</b>-Challenge
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Inregistrare ca membru</p>
        {{ form_start(form) }}
            <div class="form-group has-feedback">
                {{ form_widget(form.username) }}
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.email) }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.type) }}
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.plainPassword.first) }}
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.plainPassword.second) }}
                <span class="form-control-feedback"></span>
            </div>
            {{ form_rest(form) }}
            <div class="row">

                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Inregistreaza</button>
                </div><!-- /.col -->
            </div>
        {{ form_end(form) }}
        <a href="{{ path('security_login_form') }}" class="text-center">Sunt deja membru</a>
    </div><!-- /.form-box -->
</div><!-- /.register-box -->

{% block javascripts %}
    {% include 'AppBundle::javascript.html.twig' %}
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}
</body>
</html>
