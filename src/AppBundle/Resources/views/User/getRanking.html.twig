{% extends "::base.html.twig" %}
{% block content %}
    <div class="row">
        <div class="col-md-3">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">General</h3>
                </div>
                <div class="box-body">
                    <ul class="list-group">
                        {% for test in generalRanking  %}
                        <li class="list-group-item col-md-12"> <span class="col-md-10">{{ loop.index }}. {{ test["username"] }} </span><span class="col-md-2"><b> {{ test["total"] }}  </b></span>
                            {% endfor %}
                    </ul>
                </div>
                <!-- /.box-header -->
            </div>
        </div>
        <div class="col-md-3">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Teste</h3>
                </div>
                <div class="box-body">
                    <ul class="list-group">
                            {% for test in testRanking  %}
                                <li class="list-group-item col-md-12"> <span class="col-md-10">{{ loop.index }}. {{ test["username"] }} </span><span class="col-md-2"><b> {{ test["testScores"] }}  </b></span>
                            {% endfor %}
                    </ul>
                </div>
                <!-- /.box-header -->
            </div>
    </div>
            <div class="col-md-3">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Voturi</h3>
                    </div>
                    <div class="box-body">
                        <ul class="list-group">
                            {% for test in voteRanking  %}
                            <li class="list-group-item col-md-12"> <span class="col-md-10">{{ loop.index }}. {{ test["username"] }} </span><span class="col-md-2"><b> {{ test["voteScores"] }}  </b></span>
                                {% endfor %}
                        </ul>
                    </div>
                    <!-- /.box-header -->
                </div>
        </div>
    <div class="col-md-3">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Activitate</h3>
            </div>
            <div class="box-body">
                <ul class="list-group">
                    {% for test in activityRanking  %}
                    <li class="list-group-item col-md-12"> <span class="col-md-10">{{ loop.index }}. {{ test["username"] }} </span><span class="col-md-2"><b> {{ test["activityScores"] }}  </b></span>
                        {% endfor %}
                </ul>
            </div>
            <!-- /.box-header -->
        </div>
    </div>
    </div>
{% endblock %}