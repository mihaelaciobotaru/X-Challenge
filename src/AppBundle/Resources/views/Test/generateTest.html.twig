{% extends "::base.html.twig" %}

{% block content %}
    <div class="col-md-9">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ title }}</h3>
            </div>
            {% if error %}
                {{ toastr("error", "Adaugare intrebare", error) }}
            {% endif %}
            <!-- /.box-header -->
            <!-- form start -->
            {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'addTest'} }) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(form.title) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.time) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.time) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.noOfQuestions) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.noOfQuestions) }}
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="col-sm-12">
                    <a class="btn btn-primary col-sm-12" onclick="submit()">Submit</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.box -->
    </div>
{% endblock %}
{% block javascript %}

    function submit() {
        addTest.submit();
    }

{% endblock %}